<p id="notice"><%= notice %></p>

<div class = "container">
  <div class = "row">
    <% @sounds.each do |sound| %>
      <div class = "col-lg-3 col-md-3 col-sm-3 col-xs-3">
        <div class = "sound-picture" style = "background-image: url('<%= image_url sound.picture %>');" onClick="handleAudioImageClick('<%= sound.name %>')">
          <h3 class = "sound-name"><%= sound.name %></h3>
          <p class = "sound-control"><%= link_to 'x', sound, method: :delete, data: { confirm: 'Are you sure you want to delete this sound?' }, :class => "destroy" %></p>
        </div>
        <!-- TODO maybe add these sound controls back in later? -->
        <!-- <p class = "sound-control"><%= link_to 'Show', sound %></p>
        <p class = "sound-control"><%= link_to 'Edit', edit_sound_path(sound) %></p> -->
        <audio id = "<%= sound.name %>-audio">
          <source src = "<%= asset_path sound.file %>" type = "audio/mp3">
        </audio>
      </div>
    <% end %>
  </div>
</div>
